input:
   n=10;
output:
         **********
        **********
       **********
      **********
     **********
    **********
   **********
  **********
 **********
**********

#include <stdio.h>

int main() {
   int n;
   scanf("%d",&n);
   int space=n-1;
   for(int i=1;i<=n;i++)
   {
       for(int j=1;j<=space;j++)
       {
           printf(" ");
       }
       space--;
       for(int j=1;j<=n;j++)
       {
           printf("*");
       }
       printf("\n");
   }

    return 0;
}
